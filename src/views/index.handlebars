<div class="grid-y">
    <div class="cell shrink header medium-cell-block-container text-center">
        <h3>Stephanie Morrissey</h3>
    </div>
    {{> navigation}}
    <section class="text-center" id="about">
        <div class="grid-x grid-margin-x grid-padding-y">
            <div class="cell small-8 small-offset-2 medium-6 medium-offset-3 large-4 large-offset-1 align-self-middle">
                <div class="callout width-50">
                    <img src="images/steph-morrissey.jpeg">
                </div>
            </div>
            <div class="cell small-8 small-offset-2 medium-8 medium-offset-2 large-4 large-offset-1 align-self-middle">
                <h2>Hello,</h2>
                <p>
                    my name is Steph. I'm a graduate from the University of Sheffield in BSc
                    Information
                    Technology and Management for Business and currently enrolled in
                    a Coding Bootcamp with the University of Manchester.
                </p>
                <p>
                    I am looking for a developer role
                    which allows combining excellent communication and
                    teamwork/customer service skills along with Web Development
                    expertise.
                </p>
            </div>
        </div>
    </section>
    <section id="projects">
        {{#if projects}}

        <div class="grid-x">
            <div class="cell">
                <h3 class="text-center">Projects</h3>
            </div>
        </div>
        <div class="grid-container">
            <div class="grid-x grid-margin-x grid-margin-y small-up-1 medium-up-2 large-up-3">
                {{#each projects}}
                {{> project}}
                {{/each}}
            </div>
        </div>
        {{/if}}
    </section>
    <footer>
        <br>
        <div class="grid-container">
            <div class="grid-x grid-margin-x">
                <div class="cell justify-center rounded-social-buttons">
                    <a class="social-button linkedin" href="#"></a>
                    <a class="social-button github" href="#"></a>
                    <a class="social-button email" href="#"></a>
                    <a class="social-button cv" href="#"></a>
                </div>
            </div>
        </div>

</div>
</footer>